<div class="<?php echo $this->getContainerClassName()?>">

    <div class="field name-firstname">
        <label for="<?php echo 'username';?>" class="required"><span class="xinghao">*</span>用户名：</label>
        <div class="input-box">
            <input type="text" id="username" name="username" value="<?php echo $this->htmlEscape($this->getObject()->getFirstname()).$this->htmlEscape($this->getObject()->getLastname()) ?>" title="" class="input-text required-entry" /> 
